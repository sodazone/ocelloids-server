{
  "name": "ocelloids-mon",
  "version": "0.0.1",
  "type": "module",
  "description": "Ocelloids monitoring service",
  "main": "dist/main.js",
  "engines": {
    "node": ">=18.14"
  },
  "scripts": {
    "build": "tsc",
    "dev": "CONFIG_PATH=cfg/dev.toml nodemon --exec ts-node-esm ./src/main.ts",
    "dev:dev": "npm run dev -- -c ./cfg/dev.toml",
    "lint": "eslint --cache --fix \"src/**/*.ts\"",
    "test": "jest"
  },
  "author": "soda <projects@soda.zone>",
  "contributors": [
    "Marc Forn√≥s <marc@soda.zone>",
    "Xueying Wang <xueying@soda.zone>"
  ],
  "license": "Apache-2.0",
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      ".*/dist"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "babel-jest": "^29.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "memory-level": "^1.0.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@sodazone/ocelloids": "^1.1.8-dev.0",
    "close-with-grace": "^1.2.0",
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.23.2",
    "fastify-plugin": "^4.5.1",
    "level": "^8.0.0",
    "toml": "^3.0.0",
    "zod": "^3.22.4"
  }
}
