{
  "name": "xcm-monitoring",
  "version": "0.0.1",
  "type": "module",
  "description": "XCM monitoring service",
  "main": "dist/main.js",
  "bin": {
    "xcm-mon": "./dist/main.js"
  },
  "engines": {
    "node": ">=18.14"
  },
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/main.js",
    "dev": "XCMON_CONFIG_FILE=config/dev.toml nodemon --exec ts-node-esm ./src/main.ts",
    "lint": "eslint --cache --fix \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" npx jest",
    "postinstall": "patch-package"
  },
  "author": "soda <projects@soda.zone>",
  "contributors": [
    "Marc Forn√≥s <marc@soda.zone>",
    "Xueying Wang <xueying@soda.zone>"
  ],
  "license": "Apache-2.0",
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      ".*/dist",
      "testing"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest"
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "devDependencies": {
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "babel-jest": "^29.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "memory-level": "^1.0.0",
    "nock": "^13.3.6",
    "nodemon": "^3.0.1",
    "patch-package": "^8.0.0",
    "pino-pretty": "^10.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@fastify/swagger": "^8.11.0",
    "@fastify/swagger-ui": "^1.10.0",
    "@sodazone/ocelloids": "^1.1.8",
    "async-mutex": "^0.4.0",
    "cbor-x": "^1.5.4",
    "close-with-grace": "^1.2.0",
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.23.2",
    "fastify-healthcheck": "^4.4.0",
    "fastify-plugin": "^4.5.1",
    "got": "^13.0.0",
    "level": "^8.0.0",
    "rfc6902": "^5.0.1",
    "toml": "^3.0.0",
    "ulidx": "^2.2.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.21.4"
  }
}
