{
  "name": "xcm-monitoring",
  "version": "1.0.0",
  "type": "module",
  "description": "XCM monitoring service",
  "author": "SO/DA <projects@soda.zone>",
  "contributors": [
    "Marc Forn√≥s <marc@soda.zone>",
    "Xueying Wang <xueying@soda.zone>"
  ],
  "main": "dist/main.js",
  "bin": {
    "xcm-mon": "./dist/main.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/main.js",
    "dev": "nodemon --exec tsx ./src/main.ts",
    "lint": "eslint --cache --fix \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest"
  },
  "//": "\"postinstall\": \"patch-package\"",
  "license": "Apache-2.0",
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      ".*/dist",
      "testing"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest"
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@swc/core": "^1.4.1",
    "@swc/jest": "^0.2.36",
    "@types/babel__core": "^7.20.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "memory-level": "^1.0.0",
    "nock": "^13.5.1",
    "nodemon": "^3.0.3",
    "patch-package": "^8.0.0",
    "pino-pretty": "^10.3.1",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@fastify/jwt": "^8.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/websocket": "^8.3.1",
    "@sodazone/ocelloids": "^1.2.0",
    "async-mutex": "^0.4.1",
    "cbor-x": "^1.5.8",
    "close-with-grace": "^1.2.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.4",
    "fastify": "^4.26.1",
    "fastify-healthcheck": "^4.4.0",
    "fastify-plugin": "^4.5.1",
    "got": "^14.2.0",
    "handlebars": "^4.7.8",
    "level": "^8.0.1",
    "lru-cache": "^10.2.0",
    "prom-client": "^15.1.0",
    "rfc6902": "^5.1.1",
    "toml": "^3.0.0",
    "ulidx": "^2.3.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "packageManager": "yarn@4.1.0"
}
