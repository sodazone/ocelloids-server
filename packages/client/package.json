{
  "name": "@sodazone/ocelloids-client",
  "version": "1.0.0",
  "type": "module",
  "description": "XCM monitoring client library",
  "author": "SO/DA <projects@soda.zone>",
  "contributors": [
    "Marc Forn√≥s <marc@soda.zone>",
    "Xueying Wang <xueying@soda.zone>"
  ],
  "source": "./src/lib.ts",
  "main": "./dist/lib.cjs",
  "module": "./dist/lib.js",
  "types": "./dist/xcmon-client.d.ts",
  "files": [
    "/dist",
    "/src"
  ],
  "license": "Apache-2.0",
  "tsup": {
    "entry": [
      "src/lib.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "bundle": true,
    "sourcemap": true,
    "metafile": true,
    "clean": true
  },
  "scripts": {
    "build": "yarn build:ts && yarn build:api && yarn build:deno",
    "build:ts": "tsup",
    "build:api": "tsc  && api-extractor run --local --verbose",
    "build:deno": "node deno-build.mjs",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest",
    "docs": "typedoc",
    "lint": "eslint --cache --fix \"src/**/*.ts\""
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "./deno_dist"
    ],
    "coveragePathIgnorePatterns": [
      ".*/dist",
      ".*/deno_dist"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest"
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "packageManager": "yarn@4.1.0",
  "peerDependencies": {
    "ws": "*"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.42.3",
    "@swc/core": "^1.4.6",
    "@swc/jest": "^0.2.36",
    "eslint": "^8.57.0",
    "finalhandler": "^1.2.0",
    "jest": "^29.7.0",
    "mock-socket": "^9.3.1",
    "nock": "^14.0.0-beta.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typedoc": "^0.25.11",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "isows": "^1.0.3"
  }
}
