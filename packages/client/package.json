{
  "name": "xcmon-client",
  "version": "1.0.0",
  "description": "XCM monitoring client library",
  "author": "SO/DA <projects@soda.zone>",
  "contributors": [
    "Marc Forn√≥s <marc@soda.zone>",
    "Xueying Wang <xueying@soda.zone>"
  ],
  "main": "dist/lib.js",
  "module": "dist/lib.esm.js",
  "browser": "dist/lib.umd.js",
  "files": [
    "/dist"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn build:browser && yarn build:deno",
    "build:browser": "rollup -c --bundleConfigAsCjs",
    "build:deno": "denoify",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest",
    "lint": "eslint --cache --fix \"src/**/*.ts\""
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "./deno_dist"
    ],
    "coveragePathIgnorePatterns": [
      ".*/dist",
      ".*/deno_dist"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest"
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "packageManager": "yarn@4.1.0",
  "peerDependencies": {
    "ws": "*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@swc/core": "^1.4.1",
    "@swc/jest": "^0.2.36",
    "denoify": "^1.6.9",
    "eslint": "^8.56.0",
    "finalhandler": "^1.2.0",
    "jest": "^29.7.0",
    "rollup": "^4.11.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "serve-static": "^1.15.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "isows": "^1.0.3"
  }
}
